<%- include('partials/header', { title: gate.title, user }) %>
<section class="dashboard">
  <aside class="card sidebar">
    <h2>Progress</h2>
    <nav class="puzzle-nav">
      <% sidebarItems.forEach(function(item) { %>
        <% if (item.type === 'gate') { %>
          <% if (!item.previousSolved) { %>
            <div class="puzzle-link locked gate-link">
              <span>Gate before Group <%= item.groupIndex %></span>
              <span class="status">Finish earlier groups</span>
            </div>
          <% } else if (item.canView && item.locked) { %>
            <a href="/gate/<%= item.groupIndex %>" class="puzzle-link gate-link <%= item.groupIndex === gate.groupIndex ? 'active' : '' %>">
              <span>Gate before Group <%= item.groupIndex %></span>
              <span class="status" data-gate-countdown="<%= item.unlockAtIso %>">Opens soon</span>
            </a>
          <% } else { %>
            <div class="puzzle-link gate-link">
              <span>Gate before Group <%= item.groupIndex %></span>
              <span class="status">Open</span>
            </div>
          <% } %>
        <% } %>

        <% if (item.type === 'puzzle') { %>
          <% if (item.unlocked) { %>
            <a href="/play?puzzle_id=<%= item.id %>" class="puzzle-link">
              <span>G<%= item.groupIndex %> • <%= item.order_index %>. <%= item.title %></span>
              <span class="status"><%= item.solved ? 'Solved' : 'Open' %></span>
            </a>
          <% } else { %>
            <div class="puzzle-link locked">
              <span>G<%= item.groupIndex %> • <%= item.order_index %>. Locked</span>
              <span class="status">Complete previous</span>
            </div>
          <% } %>
        <% } %>
      <% }) %>
    </nav>
  </aside>

  <div class="content-stack">
    <section class="card greeting-card">
      <h1>Hello, <%= displayName %>! You are currently in <%= placeText %> place in the overall competition.</h1>
      <div class="meta">
        <span>Started: <%= new Date(run.start_time).toLocaleString() %></span>
      </div>
    </section>

    <section class="card">
      <div class="card-header">
        <h1><%= gate.title %></h1>
        <span class="badge">Time Gate</span>
      </div>
      <div class="clue"><%- gate.contentHtml %></div>
      <div class="gate-countdown" data-gate-countdown="<%= gate.unlockAtIso %>">
        Countdown loading...
      </div>
      <div class="meta">When this gate opens, the next group of puzzles unlocks automatically.</div>
    </section>

    <section class="card">
      <h2>House Leaderboard</h2>
      <table>
        <thead>
          <tr>
            <th>House</th>
            <th>Total Score</th>
          </tr>
        </thead>
        <tbody>
          <% houseScores.forEach(function(row) { %>
            <tr>
              <td><%= row.house %></td>
              <td><%= row.total_score %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </div>
</section>
<script src="/countdown.js" defer></script>
<%- include('partials/footer') %>
